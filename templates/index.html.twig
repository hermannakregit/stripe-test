{% extends 'base.html.twig' %}

{% block body %}

   <div class="row">
	   	{% for p in panier %}
	   	   <div class="col-md-3">
		   		<div class="card" style="width: 18rem; height: 20rem;">
					  	<img src="{{ asset('assets/images/fromage_' ~ p.id ~'.jpeg') }}" class="card-img-top" alt="...">
					  	<div class="card-body">
						    <h5 class="card-title">{{ p.nom }} - {{ p.prix }} EUR </h5>
						    <p class="card-text">{{ p.description }}</p>
					  	</div>
					</div>
		   	</div>
	   	{% endfor %}
   </div>

   <div class="row">
		<div class="col-md-4 mx-auto">
			<a href="{{ path('app_payment') }}" class="btn btn-primary w-75 mt-5">Acheter</a>
		</div>
		{#<div class="col-md-4 mx-auto">
			<a href="{{ path('app_payment_link') }}" class="btn btn-primary w-75 mt-5">Lien de paiement</a>
		</div>#}
   </div>

{% endblock body %}